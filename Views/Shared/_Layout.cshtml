<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirstCoreSolution</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirstCoreSolution.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand ms-md-5 fw-bold" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-comment-alt text-secondary mx-2 my-1"></i>FLH Forum</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between mx-5">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item px-2">
                            <a class="nav-link text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-primary fw-bold" asp-area="" asp-controller="Forum" asp-action="Index">Forum</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="FAQ">FAQs</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link text-primary fw-bold " href="http://localhost:3000/"><i class="far fa-chart-bar mx-1"></i>FLH Capital</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer row bg-dark mr-0 pr-0">
            <div class="col-md-9 p-0">
                <h1 class="text-light pt-5 ps-5">
                    <i class="fa fa-comment-alt"></i>
                    FLH Forum
                </h1>
                <div class="d-flex justify-content-start ps-5 mt-4">
                    <a href="https://twitter.com/"><i class="fa fa-twitter me-3 text-light h3"></i></a>
                    <a href="https://facebook.com/"><i class="fa fa-facebook me-3 text-light h3"></i></a>
                </div>
            </div>
 
            <div class="col-md-3 p-4 ms-xs-5">
                <h3 class="text-light">Company</h3>
                <table>
                    <tbody>
                     <tr>
                        <td>
                            <a class="text-light" href="http://localhost:3000/"><i class="far fa-chart-bar mx-1"></i>FLH Capital</a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <a class="text-light" asp-controller="Home" asp-action="FAQ">FAQs</a>
                        </td>
                    </tr>   
                    </tbody>
                    
                </table>
            </div>

            
            <div class="d-flex justify-content-center mt-3">
                <hr class="text-light"/>
                <p class="text-light">&copy; 2022 FLH Capital. All Rights Reserved.</p>
            </div>
            
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
